{
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test)",
      "Bash(npm run test:*)",
      "Bash(npm run build)",
      "Bash(git status)",
      "Bash(git diff)",
      "Bash(git log*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Write(./.env)",
      "Write(./.env.*)"
    ]
  },
  "env": {
    "GITHUB_REPO": "your-org/your-repo",
    "MAIN_BRANCH": "main",
    "NODE_ENV": "development"
  },
  "model": "claude-sonnet-4-5-20250929",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'File modified: check formatting if needed'"
          }
        ]
      }
    ]
  },
  "sandbox": {
    "enabled": true,
    "excludedCommands": []
  }
}
